Port {{ ssh_port_resolved }}
Protocol 2
AddressFamily any
PasswordAuthentication no
ChallengeResponseAuthentication no
KbdInteractiveAuthentication no
PubkeyAuthentication yes
PermitRootLogin no
PermitEmptyPasswords no
MaxAuthTries 3
LoginGraceTime 30
ClientAliveInterval 300
ClientAliveCountMax 2
AllowAgentForwarding {{ 'yes' if ssh_allow_agent_forwarding_resolved else 'no' }}
AllowTcpForwarding {{ 'yes' if ssh_allow_tcp_forwarding_resolved else 'no' }}
X11Forwarding no
UseDNS no
PrintLastLog yes
AuthorizedKeysFile .ssh/authorized_keys
Subsystem sftp /usr/lib/openssh/sftp-server
{% if ssh_banner_path %}
Banner {{ ssh_banner_path }}
{% endif %}
{% if ssh_allowed_users_resolved | length > 0 %}
AllowUsers {{ ssh_allowed_users_resolved | join(' ') }}
{% endif %}
{% if ssh_allowed_groups_resolved | length > 0 %}
AllowGroups {{ ssh_allowed_groups_resolved | join(' ') }}
{% endif %}
