# cloud-config network (https://cloudinit.readthedocs.io/en/latest/topics/network-config.html)
version: 2
ethernets:
  eth0:
    dhcp4: false
    addresses:
      - 192.0.2.10/24 # replace with your static IP (RFC 5737 sample)
    gateway4: 192.0.2.1 # replace with your gateway
    nameservers:
      search:
        - home.local
      addresses:
        - 1.1.1.1
        - 1.0.0.1
    optional: true
